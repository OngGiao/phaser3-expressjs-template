    "dependencies": {
        "@types/express": "^4.17.6",
        "express": "^4.17.1",
        "ts-node-dev": "^1.0.0-pre.44"
    },
    "devDependencies": {
        "expose-loader": "^0.7.5",
        "phaser": "^3.23.0",
        "ts-loader": "^7.0.2",
        "typescript": "^3.8.3",
        "webpack": "^4.43.0",
        "webpack-cli": "^3.3.12",
        "write-file-webpack-plugin": "^4.5.1"
    }
